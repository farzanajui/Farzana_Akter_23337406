    url = f"https://wttr.in/{city}?format=j1"   # JSON format
    response = requests.get(url)

    if response.status_code == 200:
        data = response.json()
        print("âœ… Success!")
        return data
    else:
        print(f"âŒ Error fetching data: {response.status_code}")
        return None

# Example call
